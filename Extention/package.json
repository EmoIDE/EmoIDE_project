{
  "name": "emoide",
  "displayName": "emoIDE",
  "publisher": "emoIDETeam",
  "description": "An emotional status tool",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "contributes": {
    
    "webviews": [
      {
        "contributes": {
          "contentSecurityPolicy": {
            "img-src": ["self", "vscode-resource:"]
            }
      }}],
    "configuration": [
      
      {
        "activationEvents": [
          "onView:SAMView"
      ],
        "type": "object",
        "title": "Extension",
        "properties": {
         
          "Extension.ServerPort":{
            "type":"string",
            "default": "6969",
            "description": "Server Port for the python server"
          },

          "Extension.FileFormat": {
            "type": "string",
            "default": ".csv",
            "enum": [".pdf", ".tsv",".html",".ods", ".xlxs", ".csv"],
            "description": "Format of file when data is saved"
          },

          "Extension.SaveLocation":
          {
            "type": "string",
            "default": "null",
            "description": "Location to store the data from the server"
          },

          "Extension.DonateData":{
            "type":"boolean",
            "default": "false",
            "description": "Donate your to data to the machine learning model"
          },

          "Extension.Pop-ups":{
            "type":"boolean",
            "default":"true"
          },

          "Extension.DashboardThreshold":{
            "description": "Placeholder"
          }
         }
      
      },
      
        {
          "type": "object",
          "title": "Hardware",
            "properties": {
              "Hardware.E4StreamingPort": {
                "type":"string",
                "default":"28000",
                "description": "E4 streaming server port"
              },

              "Hardware.EyeTrackerCalibration":{
                "type":"boolean",
                "default":true,
                "description": "Enabling calibration may increase startup time"
              }
            }
          },
          {
            "type": "object",
            "title": "User",
              "properties": {
                "User.Age":{
                  "type": "integer",
                  "default":0,
                  "minimum": 0,
                  "description": "Age of the user" 
                },
                
                "User.Gender":{
                  "type": "string",
                  "default": "null",
                  "enum": ["male","female"]
                },

                "User.RestingHeartRate":{
                  "type":"integer",
                  "default":70,
                  "minimum": 0
                },

                "User.Glasses":{
                  "type": "string",
                  "default": "no",
                  "enum": ["yes", "no"],
                  "markdownDescription": "Are you using glasses?"
                }
            }
        }
      ],

      

          
      

      
  




    "menus": {
      "view/title": [
        {
          "command": "EmoIDE.showSettings",
          "when": "view == Devices",
          "group": "navigation"
        },
        {
          "command": "EmoIDE.connectToServer",
          "when": "view == Devices",
          "group": "navigation"
          
        },
        {
          "command": "statusWindow.open",
          "when": "view == SAMView",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "EmoIDE",
          "title": "EmoIDE",
          "icon": "Icons/Logo.png"
        }
      ]
    },
    "views": {
      "EmoIDE": [
        {
          "type":"webview",
          "id": "SAMView",
          "name": "Data"
        },
        {
          "id": "Devices",
          "name": "Devices",
          "icon": "Icons/Logo.png",
          "canToggleVisibility": true
        }
      ]
    },
    "commands": [
      {
        "command": "emoide.BreakNotif",
        "title": "take a break!",
        "category": "notification"
      },
      {
        "command": "statusWindow.open",
        "title": "Open status window",
        "icon": "$(graph-line)"
      },
      {
        "command": "EmoIDE.showSettings",
        "title": "Open User Settings",
        "icon": "$(gear)"
      },
      {
        "command": "EmoIDE.ConnectToDevice",
        "title": "Connect to device specified in parameter"
      },
      {
        "command": "EmoIDE.connectToServer",
        "title": "Try connecting to the server",
        "icon": "$(broadcast)"
      },
      {
        "command": "EmoIDE.requestEyeData",
        "title": "Requests eye data from the server every x seconds.",
        "icon": "Icons/eyeDataIcon"
      },
      {
        "command": "EmoIDE.UpdateSAM",
        "title": "set SAMStatus by index"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "start": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "vscode": "^1.1.37"
  },
  "directories": {
    "test": "test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
