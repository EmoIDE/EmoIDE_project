{
  "name": "emoide",
  "displayName": "emoIDE",
  "publisher": "emoIDETeam",
  "description": "An emotional status tool",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration":{
      "title": "EmoIDE",
      "properties": {
        "Age":
        {
          "type": "string",
          "default": "NA",
          "description": "The age of the user"
        },
        "Base Pulse":
        {
          "type": "integer",
          "default":100,
          "description": "Resting pulse of user as point of reference"
        },
        "File Format":
        {
          "type": "string",
          "default": "null",
          "description": "Format of file when data is saved"
      }
    }
    },
    "menus": {
      "view/title": [
        {
          "command":"EmoIDE.showSettings",
          "when": "view == Devices",
          "group": "navigation"
        },
        {
          "command":"statusWindow.open",
          "when": "view == DataWindow",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "EmoIDE",
          "title": "EmoIDE",
          "icon": "Icons/Logo.png"
        }
      ]
    },
    "views":{
      "EmoIDE": [
        {
          "id": "DataWindow",
          "name": "Data"
        },
        {
          "id": "Devices",
          "name": "Devices",
          "icon": "Icons/Logo.png",
          "canToggleVisibility": true
        }
      ],
      "explorer": [
        {"id": "deviceExplorer",
         "name":  "EmoIDE",
         "command":"statusWindow.open",
         "contextualTitle": "Package Explorer"
        }]
      },
    "commands": [{
      "command": "emoide.BreakNotif",
      "title": "take a break!",
      "category": "notification" 
    },
    {
      "command": "statusWindow.open",
      "title": "Open status window",
      "icon": "$(graph-line)"
    },
    {
      "command": "EmoIDE.showSettings",
      "title": "Open User Settings",
      "icon": "$(gear)"
    }]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.2"
  }
}
